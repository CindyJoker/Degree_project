<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/random_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/random_image"
        android:id="@+id/image_butts">

        <ImageButton
            android:id="@+id/recog_play"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/play_butt"/>

        <ImageButton
            android:id="@+id/recog_stop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/pause"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/recog_play"/>

        <ImageButton
            android:id="@+id/recog_next"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/recog_stop"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/next"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/recog_your_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:layout_below="@id/image_butts"/>

    <TextView
        android:id="@+id/recog_highest_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest score"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/recog_your_score"
        android:textSize="18sp"
        android:layout_below="@id/image_butts"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/recog_score"
        android:padding="16dp"
        android:layout_marginLeft="32dp"
        android:textSize="24sp"
        android:layout_below="@id/recog_your_score"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/highest_score"
        android:padding="16dp"
        android:layout_toRightOf="@id/recog_score"
        android:layout_marginLeft="70dp"
        android:textSize="24sp"
        android:layout_below="@id/recog_highest_score"/>

    <Button
        android:id="@+id/butt_play_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listen to your record"
        android:layout_below="@id/recog_score"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>